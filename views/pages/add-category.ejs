<%- include('../partials/header.ejs')%>
    <div class="container">
        <div class="page-inner">
            <div class="page-header">
                <h3 class="fw-bold mb-3">Add Category Page</h3>
                <ul class="breadcrumbs mb-3">
                    <li class="nav-home">
                        <a href="/">
                            <i class="icon-home"></i>
                        </a>
                    </li>
                    <li class="separator">
                        <i class="icon-arrow-right"></i>
                    </li>
                    <li class="nav-item">
                        <a href="javascript:void(0)">Category</a>
                    </li>
                    <li class="separator">
                        <i class="icon-arrow-right"></i>
                    </li>
                    <li class="nav-item">
                        <a href="javascript:void(0)">Add Category</a>
                    </li>
                </ul>
            </div>
            <div class="row">
                <div class="d-flex justify-content-center">
                    <div class="col-md-12 col-lg-12 col-xl-6">
                        <div class="card">
                            <form class="form-horizontal" action="/category/add-category" method="post"
                                enctype="multipart/form-data">
                                <div class="card-header">
                                    <div class="card-title">Add Category Details</div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-12 col-lg-12">
                                            <div class="form-group">
                                                <div class="input-group input-group-lg">
                                                    <span class="input-group-text" id="inputGroup-sizing-lg">
                                                        <i class="fas fa-th-large"></i>
                                                    </span>
                                                    <input type="text" class="form-control"
                                                        aria-describedby="inputGroup-sizing-lg"
                                                        placeholder="Enter Category Name" name="categoryName" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="input-group input-group-lg">
                                                    <span class="input-group-text" id="inputGroup-sizing-lg">
                                                        <i class="fas fa-image"></i>
                                                    </span>
                                                    <input type="file" class="form-control"
                                                        aria-describedby="inputGroup-sizing-lg" name="image">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-action p-3">
                                        <button class="btn btn-success fs-5" type="submit">Add Category</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>