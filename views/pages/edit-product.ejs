<%- include('../partials/header.ejs')%>
    <div class="container">
        <div class="page-inner">
            <div class="page-header">
                <h3 class="fw-bold mb-3">Edit Product Page</h3>
                <ul class="breadcrumbs mb-3">
                    <li class="nav-home">
                        <a href="/">
                            <i class="icon-home"></i>
                        </a>
                    </li>
                    <li class="separator">
                        <i class="icon-arrow-right"></i>
                    </li>
                    <li class="nav-item">
                        <a href="javascript:void(0)">Add Product</a>
                    </li>
                    <li class="separator">
                        <i class="icon-arrow-right"></i>
                    </li>
                    <li class="nav-item">
                        <a href="javascript:void(0)">Edit Product</a>
                    </li>
                </ul>
            </div>
            <div class="row">
                <div class="d-flex justify-content-center">
                    <div class="col-md-12 col-lg-12 col-xl-6">
                        <div class="card">
                            <form class="form-horizontal" action="/product/edit-product/<%= product.id %>" method="post"
                                enctype="multipart/form-data">
                                <div class="card-header">
                                    <div class="card-title">Edit Product Details</div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-12 col-lg-12">
                                            <div class="form-group">
                                                <div class="input-icon fs-5">
                                                    <span class="input-icon-addon">
                                                        <i class="fab fa-product-hunt"></i>
                                                    </span>
                                                    <input type="text" class="form-control fs-5"
                                                        placeholder="Enter Product Name" name="name"
                                                        value="<%= product.name %>" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-icon fs-5">
                                                    <span class="input-icon-addon">
                                                        <i class="fas fa-rupee-sign"></i>
                                                    </span>
                                                    <input type="text" class="form-control fs-5" id="price"
                                                        placeholder="Enter Price" name="price"
                                                        value="<%= product.price %>" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-icon fs-5">
                                                    <span class="input-icon-addon">
                                                        <i class="fas fa-info-circle"></i>
                                                    </span>
                                                    <textarea class="form-control fs-5" id="description"
                                                        placeholder="Write Description"
                                                        name="description"><%= product.description %></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-icon fs-5">
                                                    <img src="../../<%= product.image %>" alt="<%= product.name %>"
                                                        width="100">
                                                    <input type="hidden" value="<%= product.image %>" name="oldImage" />
                                                </div>
                                                <div class="input-group input-group-lg">
                                                    <span class="input-group-text" id="inputGroup-sizing-lg">
                                                        <i class="fas fa-image"></i>
                                                    </span>
                                                    <input type="file" class="form-control"
                                                        aria-describedby="inputGroup-sizing-lg" name="image">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-action">
                                        <button class="btn btn-success fs-5" type="submit">Update</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>